{% extends 'user/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Nouvel utilisateur
{% endblock %}

{% block content %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

<div id="wrapper">
    <div id="container">

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}

    </div>
</div>

{% endblock %}
